{
  "name": "koto",
  "version": "1.0.0",
  "description": "Koto - Speech-to-Text Dictation App",
  "author": {
    "name": "Karthik Gangula",
    "email": "karthik@users.noreply.github.com"
  },
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "vite build && electron-builder --publish never",
    "native:build": "node-gyp rebuild",
    "native:clean": "node-gyp clean",
    "whisper:build": "node scripts/build-whisper.js",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@ricky0123/vad-web": "^0.0.30",
    "node-addon-api": "^8.3.1",
    "radix-ui": "^1.4.3"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "@vitejs/plugin-react": "^4.3.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "concurrently": "^9.1.2",
    "electron": "^40.2.1",
    "electron-builder": "^26.7.0",
    "lucide-react": "^0.563.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "shadcn": "^3.8.4",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "tw-animate-css": "^1.4.0",
    "vite": "^6.0.7",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.koto.app",
    "productName": "Koto",
    "icon": "dither_it_emojis.com wizard-bear.png",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "build/**/*",
      "assets/**/*",
      "package.json",
      "!native/src/**/*"
    ],
    "asarUnpack": [
      "assets/**/*",
      "build/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": "arm64"
        },
        {
          "target": "zip",
          "arch": "arm64"
        }
      ],
      "darkModeSupport": true,
      "identity": null,
      "extendInfo": {
        "NSMicrophoneUsageDescription": "Koto needs microphone access for speech-to-text dictation.",
        "NSAppleEventsUsageDescription": "Koto needs to send paste commands to other apps to insert dictation text."
      }
    },
    "dmg": {
      "background": "build/dmg-background.png",
      "iconSize": 80,
      "window": {
        "width": 660,
        "height": 400
      },
      "contents": [
        {
          "x": 170,
          "y": 220
        },
        {
          "x": 490,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "maintainer": "Karthik <karthik@users.noreply.github.com>",
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
