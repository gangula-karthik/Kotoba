{
  "name": "openwisprflow",
  "version": "1.0.0",
  "description": "OpenWisprFlow - Speech-to-Text Dictation App",
  "author": "OpenWisprFlow Team",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "vite build && electron-builder",
    "native:build": "node-gyp rebuild",
    "native:clean": "node-gyp clean",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "node-addon-api": "^8.3.1",
    "radix-ui": "^1.4.3"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "@vitejs/plugin-react": "^4.3.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "concurrently": "^9.1.2",
    "electron": "^33.3.1",
    "electron-builder": "^25.1.8",
    "lucide-react": "^0.563.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "shadcn": "^3.8.4",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "tw-animate-css": "^1.4.0",
    "vite": "^6.0.7",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.openwisprflow.app",
    "productName": "OpenWisprFlow",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "native/**/*",
      "build/**/*",
      "assets/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "zip",
          "arch": "arm64"
        }
      ],
      "darkModeSupport": true,
      "extendInfo": {
        "LSUIElement": true
      }
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
